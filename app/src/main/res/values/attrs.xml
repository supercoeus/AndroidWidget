<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 数量加减控件 -->
    <declare-styleable name="AmountView">
        <attr name="av_btmWidth" format="dimension|reference"/>
        <attr name="av_btmHeight" format="dimension|reference"/>
        <attr name="av_middleWidth" format="dimension|reference"/>
        <attr name="av_leftBackground" format="reference"/>
        <attr name="av_middleBackground" format="reference"/>
        <attr name="av_rightBackground" format="reference"/>
        <attr name="av_textSize" format="dimension|reference"/>
        <attr name="av_textColor" format="color|reference"/>
        <attr name="av_isEditor" format="boolean|reference"/>
        <attr name="av_min" format="integer|reference"/>
        <attr name="av_max" format="integer|reference"/>
        <attr name="av_stepSize" format="integer|reference"/>
        <attr name="av_amount" format="integer|reference"/>
    </declare-styleable>

    <!-- 增加版 TextView -->
    <declare-styleable name="SuperTextView">
        <attr name="stv_background" format="color|reference"/>
        <attr name="stv_tagBackground" format="color|reference"/>
        <attr name="stv_tagTextSize" format="dimension|reference"/>
        <attr name="stv_tagTextColor" format="color|reference"/>
        <attr name="stv_tagMarginStart" format="dimension|reference"/>
        <attr name="stv_tagMarginEnd" format="dimension|reference"/>
        <attr name="stv_tagPosition" format="integer|reference"/>
        <attr name="stv_tagGravity">
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
        </attr>
        <attr name="stv_tags" format="reference"/>
    </declare-styleable>
</resources>