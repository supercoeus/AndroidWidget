<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="staffViewStyle">@style/StaffView</item>
        <item name="progressBarViewStyle">@style/ProgressBarView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Default StaffView style. -->
    <style name="StaffView">
        <item name="sv_staff">@mipmap/ic_staff</item>
        <item name="sv_normalLabelColor">@color/colorPrimary</item>
        <item name="sv_selectLabelColor">@color/colorAccent</item>
        <item name="sv_labelMarginTop">4dp</item>
        <item name="sv_labelTextSize">16sp</item>
        <item name="sv_cursorDrawable">@drawable/shape_cursor</item>
        <item name="sv_extraTextSize">10sp</item>
        <item name="sv_extraMarginTop">14dp</item>
        <item name="sv_extraMarginLeft">6dp</item>
    </style>

    <!-- Default ProgressBarView style. -->
    <style name="ProgressBarView">
        <item name="pbv_progressWidth">10dp</item>
        <item name="pbv_progressColor">@color/colorAccent</item>
        <item name="pbv_progressBackground">@color/colorPrimary</item>
        <item name="pbv_progressTextSize">16sp</item>
        <item name="pbv_progressTextColor">@android:color/white</item>
        <item name="pbv_describeText">completed</item>
        <item name="pbv_describeTextSize">10sp</item>
        <item name="pbv_describeTextColor">@android:color/white</item>
        <item name="pbv_describeOffsetY">2dp</item>
        <item name="pbv_startAngle">270</item>
    </style>

</resources>
